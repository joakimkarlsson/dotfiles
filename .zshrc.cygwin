# {{{ Aliases
#
# Kill a native window process from cygwin terminal
alias killw='taskkill /F /PID'
alias killall='taskkill /F /T /IM'

# Standard shell shortcuts
alias ll='ls -l --color'
alias la='ls -lA --color'

alias open='cygstart'

# }}}
